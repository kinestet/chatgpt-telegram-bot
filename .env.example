# Telegram bot token from BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# OpenAI API key
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI model to use
OPENAI_MODEL=gpt-4o-mini

# Default bot language
BOT_LANGUAGE=en

# Users that are allowed to use the bot (Telegram IDs, comma-separated)
# '*' to allow anyone to use the bot
ALLOWED_TELEGRAM_USER_IDS=*

# Admin user IDs (Telegram IDs, comma-separated)
# Will have access to admin commands and will not have any budget limitations
ADMIN_USER_IDS=your_telegram_id_here

# Database configuration
USE_DATABASE=true
DB_HOST=localhost
DB_PORT=5432
DB_NAME=telegram_bot
DB_USER=postgres
DB_PASSWORD=your_password_here

# Telegram bot settings
# Disable features not needed for AI psychologist
ENABLE_IMAGE_GENERATION=false
ENABLE_TRANSCRIPTION=true
ENABLE_VISION=true
ENABLE_TTS_GENERATION=false
